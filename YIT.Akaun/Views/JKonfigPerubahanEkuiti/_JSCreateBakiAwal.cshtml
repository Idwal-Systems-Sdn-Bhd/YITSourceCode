        return Baris;
    }
    function LockTolakKodBakiAwal() {
        var Baris = GetTolakKodBakiAwalDetails();
        $.ajax({
            type: "POST",
            url: '@Url.Action("SaveBaris","JKonfigPerubahanEkuiti")',
            data: Baris,
            dataType: "json",
            success: function (msg) {
                if (msg.result === "OK") {
                    $('#bakiAwalTolak').val(msg.record);
                } else {
                    toastr.error(msg.message);
