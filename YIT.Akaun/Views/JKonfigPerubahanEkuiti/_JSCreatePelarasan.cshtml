    function ClearPelarasanTolak() {
        $('#pelarasanTolakEnJenisCartaList').val(null).trigger('change');
        $('#pelarasanTolakKodList').val(null).trigger('change');
        $('#pelarasanTolakIsKecuali').val("false").change();
