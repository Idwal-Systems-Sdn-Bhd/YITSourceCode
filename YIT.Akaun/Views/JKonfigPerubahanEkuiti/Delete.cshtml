@model JKonfigPerubahanEkuiti

@{
    ViewData["Title"] = "Konfigurasi Perubahan Ekuiti - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Views/Partials/Common/_TitleDeletePartial.cshtml" />

        <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JKWId)
            </dt>
            <dd class="col-sm-10">
                @BelanjawanFormatter.ConvertToKW(Model.JKW?.Kod) - @Model.JKW?.Perihal
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tahun)
            </dt>
            <dd class="col-sm-10">
                @Model.Tahun
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BakiAwal)
            </dt>
            <dd class="col-sm-10">
                @Convert.ToDecimal(Model.BakiAwal).ToString("#,##0.00")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pelarasan)
            </dt>
            <dd class="col-sm-10">
                @Convert.ToDecimal(Model.Pelarasan).ToString("#,##0.00")
            </dd>

            <dt class="col-sm-2">
                Baki Dinyatakan RM
            </dt>
            <dd class="col-sm-10 fw-bold">
                @Convert.ToDecimal(Model.BakiAwal + Model.Pelarasan).ToString("#,##0.00")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LebihanBersih)
            </dt>
            <dd class="col-sm-10">
                @Convert.ToDecimal(Model.LebihanBersih).ToString("#,##0.00")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BakiAkhir)
            </dt>
            <dd class="col-sm-10 fw-bold">
                @Convert.ToDecimal(Model.BakiAkhir).ToString("#,##0.00")
            </dd>
        </dl>
        <hr />
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input name="syscode" value="SPPB" hidden />
            <input type="submit" value="Hapus" class="btn ac-danger btn-sm" />
            <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </form>
    </div>
</div>
