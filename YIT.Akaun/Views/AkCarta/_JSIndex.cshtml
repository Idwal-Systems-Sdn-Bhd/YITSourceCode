<script type="text/javascript">
    var columnSearchVar;
    $(document).ready(function () {

        var table = $('.table').DataTable({
            "paging": false,
            rowReorder: true,
            columnDefs: [
                { orderable: true, className: 'reorder', targets: 1 },
                { orderable: true, className: 'reorder', targets: 2 },
                { orderable: true, className: 'reorder', targets: 3 },
                { orderable: false, targets: '_all' }
            ],
            "order": [[2, "asc"]],
            "scrollY": "50vh",
            "scrollX": true,
            "scrollCollapse": true,
            "paging": false,
            dom: 'lrti',
            "language": {
                "info": "_TOTAL_ entri yang dipamerkan",
                "infoEmpty": "Tiada data untuk dipamerkan",
                "infoFiltered": " - ditapis daripada _MAX_ jumlah keseluruhan rekod"
            }
        });

        $('#batalCari').click(function () {
            if (!columnSearchVar) {
                table
                    .search('')
                    .draw();
            }
            else {
                table
                    .columns('')
                    .search('')
                    .draw();
            }
            $('#myInput').val('');
            alert("batalcari triggered");
        });

        $('#columnSearch').change(function () {
            columnSearchVar = $(this).val();

            $('#myInput').val('');
            table
                .search('')
                .columns().search('')
                .draw();
        });

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();



        $('#myInput').on('keyup', function () {
            if (!columnSearchVar) {
                table
                    .search(this.value)
                    .draw();
            }
            else {
                table
                    .columns(columnSearchVar)
                    .search(this.value)
                    .draw();
            }
        });
    });

</script>
