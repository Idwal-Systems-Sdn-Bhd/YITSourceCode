@model DPenyemak

@{
    ViewData["Title"] = "Penyemak - Hapus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Views/Partials/Common/_TitleDeletePartial.cshtml" />

        <p class="text-danger">Anda pasti untuk menghapuskan maklumat berikut?</p>
        <div class="form-group">
            <label asp-for="DPekerjaId" class="control-label"></label>
            <input class="form-control form-control-sm text-uppercase" value="@Model.DPekerja?.NoGaji - @Model.DPekerja?.Nama" readonly />
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MinAmaun" class="control-label"></label>
                    <input asp-for="MinAmaun" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MaksAmaun" class="control-label text-white"></label>
                    <input asp-for="MaksAmaun" class="form-control form-control-sm text-uppercase" readonly />
                </div>
            </div>
        </div>
        <div class="form-group">

            <div class="card">
                <div class="card-body">
                    <label class="control-label">Capaian : </label>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsInvois" disabled /> @Html.DisplayNameFor(model => model.IsInvois)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsTerimaan" disabled /> @Html.DisplayNameFor(model => model.IsTerimaan)
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <hr />

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input name="syscode" value="SPPB" hidden />
            <input type="submit" value="Hapus" class="btn ac-danger btn-sm" />
            <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </form>
    </div>
</div>
