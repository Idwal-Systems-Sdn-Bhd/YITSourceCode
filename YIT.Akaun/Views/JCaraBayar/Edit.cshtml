@model JCaraBayar

@{
    ViewData["Title"] = "Cara Bayar - Ubah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-primary mb-0">@ViewData["Title"]</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / <a asp-action="Details" asp-route-id="@Model.Id" class="text-secondary">Papar</a> / Ubah</span>
            </div>
            <div class="col-4 ">
                <a asp-action="Index" class="text-secondary float-end"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <hr class="mt-2" />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input name="syscode" value="SPPB" hidden />
            <div class="form-group">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm text-uppercase" readonly />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perihal" class="control-label"></label>
                <input asp-for="Perihal" class="form-control form-control-sm text-uppercase" onkeydown="return /[a-zA-Z]/i.test(event.key)" />
                <span asp-validation-for="Perihal" class="text-danger"></span>
            </div>
            <div class="card">
                <div class="card-body">
                    <label asp-for="IsLimit" class="control-label"></label>
                    <div class="custom-control custom-radio">
                        <input asp-for="IsLimit" type="radio" id="IsLimit1" class="custom-control-input" value="false">
                        <label class="custom-control-label" for="IsLimit">Tidak</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input asp-for="IsLimit" type="radio" id="IsLimit2" class="custom-control-input" value="true">
                        <label class="custom-control-label" for="IsLimit2">Ya</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MaksAmaun" class="control-label"></label>
                <input asp-for="MaksAmaun" type="number" step="0.01" class="form-control form-control-sm" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}