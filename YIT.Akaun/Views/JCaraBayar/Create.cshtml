@model JCaraBayar

@{
    ViewData["Title"] = "Cara Bayar - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Views/Partials/Common/_TitleCreatePartial.cshtml" />
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="syscode" value="SPPB" hidden />
            <div class="form-group">
                <label asp-for="Kod" class="control-label"></label>
                <input asp-for="Kod" class="form-control form-control-sm text-uppercase" maxLength="2" onkeydown="return /[a-zA-Z]/i.test(event.key)" required />
                <span asp-validation-for="Kod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Perihal" class="control-label"></label>
                <input asp-for="Perihal" class="form-control form-control-sm text-uppercase" onkeydown="return /[a-zA-Z]/i.test(event.key)" required />
                <span asp-validation-for="Perihal" class="text-danger"></span>
            </div>
            <div class="card">
                <div class="card-body">
                    <label asp-for="IsLimit" class="control-label"></label>
                    <div class="custom-control custom-radio">
                        <input asp-for="IsLimit" type="radio" id="IsLimit1" class="custom-control-input" value="false" checked>
                        <label class="custom-control-label" for="IsLimit">Tidak</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input asp-for="IsLimit" type="radio" id="IsLimit2" class="custom-control-input" value="true">
                        <label class="custom-control-label" for="IsLimit2">Ya</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MaksAmaun" class="control-label"></label>
                <input asp-for="MaksAmaun" type="number" value="0.00" step="0.01" class="form-control form-control-sm" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
