<script>
    $(document).ready(function () {

        var table = $('.table').DataTable({
            "paging": false,
            rowReorder: false,
            columnDefs: [
                { orderable: false, targets: '_all' }
            ],
            columns: [
                {
                    class: 'details-name',
                    orderable: false,
                    data: null,
                    defaultContent: '',
                },
                { data: 'bil' },
                { data: 'tarikh' },
                { data: 'ptj' },
                { data: 'objek' },
                { data: 'no_rujukan' },
                { data: 'debit' },
                { data: 'kredit' },
                { data: 'baki' },
            ],
            "scrollY": "50vh",
            "scrollX": true,
            "scrollCollapse": true,
            "paging": false,
            dom: 'lrt'
        });

        $(".select2").select2({
            theme: "bootstrap"
        });

        // bring the dropdown select2 in front of modal
        $('#moJKWId').select2({
            dropdownParent: $('#modalCetak'),
            theme: "bootstrap"
        });

        $('#moJPTJId').select2({
            dropdownParent: $('#modalCetak'),
            theme: "bootstrap"
        });

        $('#moAkCartaId').select2({
            dropdownParent: $('#modalCetak'),
            theme: "bootstrap"
        });


        // Array to track the ids of the details displayed rows
        var detailRows = [];

        $('.table tbody').on('click', 'tr td.details-name', function () {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            var idx = detailRows.indexOf(tr.attr('id'));

            if (row.child.isShown()) {
                tr.removeClass('details');
                row.child.hide();

                // Remove from the 'open' array
                detailRows.splice(idx, 1);
            } else {
                tr.addClass('details');
                var d = row.data()
                var str = '<strong>NAMA / RINGKASAN</strong> <br>';
                if (d.objek != '-') {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetNamaOrRingkasan", "AkAkaun")',
                        data: { noRujukan: d.no_rujukan },
                        dataType: "json",
                        success: function (msg) {

                            if (msg.record.length > 0) {
                                for (var i = 0; i < msg.record.length; i++) {
                                    var item = msg.record[i];
                                    str +=  item.indek + " - " + item.perihal + "<br>";
                                }
                                row.child(str).show();
                            }
                        },
                        error: function (req, status, error) {
                            alert(error);
                        }
                    });
                }
                /*row.child(format(row.data())).show();*/

                // Add to the 'open' array
                if (idx === -1) {
                    detailRows.push(tr.attr('id'));
                }
            }
        });

        // On each draw, loop over the `detailRows` array and show any child rows
        table.on('draw', function () {
            detailRows.forEach(function (id, i) {
                $('#' + id + ' td.details-name').trigger('click');
            });
        });

        table.columns.adjust();

    });

</script>
