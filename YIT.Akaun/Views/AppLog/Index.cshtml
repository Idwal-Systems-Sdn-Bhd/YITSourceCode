@model IEnumerable<AppLog>


@{
    ViewData["Title"] = "Log Transaksi Pengguna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="_JSIndex" />
<div class="card box-shadow">
    <div class="card-body border">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase mb-0">@ViewData["Title"]</h5>
                <span class="ac-ref">Indeks</span>
            </div>

        </div>
        <hr class="mt-2" />
        <div class="card mb-2">
            <div class="card-body pl-3 pb-2 ">
                <label class="form-control-plaintext" for="searchselect">Carian : </label>
                <div class="form-actions no-color mb-2">
                    <form asp-action="Index" method="get" class="needs-validation" novalidate>
                        <div class="form-actions no-color mb-3">
                            <div class="row g-3">
                                <div class="col-md-2">
                                    <label class="form-control-label">Pengguna</label>
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group mb-2 input-group-sm ">
                                        <select class="form-control form-control-sm select2" name="searchUsername" asp-items="@ViewBag.username" id="ddlUsername"></select>
                                        <label class="invalid-feedback">Sila isi ruangan ini.</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-2">
                                    <div class="input-group mb-2 input-group-sm ">
                                        <label class="form-control-label">Modul</label>
                                    </div>
                                </div>
                                <div class="col-md-4">

                                    <div class="input-group mb-2 input-group-sm ">
                                        <span class="input-group-text" id="basic-addon1">Dari</span>
                                        <input class="form-control form-control-sm" type="text" name="searchModulFrom" value="@ViewData["ModulFrom"]" id="modul1" />
                                        <label class="invalid-feedback">Sila isi ruangan ini.</label>
                                    </div>
                                </div>
                                <div class="col-md-4">

                                    <div class="input-group mb-2 input-group-sm ">
                                        <span class="input-group-text" id="basic-addon1">Hingga</span>
                                        <input class="form-control form-control-sm" type="text" name="searchModulTo" value="@ViewData["ModulTo"]" id="modul2" />
                                        <label class="invalid-feedback">Sila isi ruangan ini.</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col-md-2">
                                    <div class="input-group mb-2 input-group-sm ">
                                        <label class="form-control-label">Tarikh</label>
                                    </div>
                                </div>
                                <div class="col-md-4">

                                    <div class="input-group mb-2 input-group-sm ">
                                        <span class="input-group-text" id="basic-addon1">Dari</span>
                                        <input class="form-control form-control-sm" type="datetime-local" name="searchDateFrom" value="@ViewData["DateFrom"]" id="tarikh1" />
                                        <label class="invalid-feedback">Sila isi ruangan ini.</label>
                                    </div>
                                </div>
                                <div class="col-md-4">

                                    <div class="input-group mb-2 input-group-sm ">
                                        <span class="input-group-text" id="basic-addon1">Hingga</span>
                                        <input class="form-control form-control-sm" type="datetime-local" name="searchDateTo" value="@ViewData["DateTo"]" id="tarikh2" />
                                        <label class="invalid-feedback">Sila isi ruangan ini.</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="mb-3">
                            <div class="text-center hidden-mobile">
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <button class="btn ac-primary" disabled="disabled"><i class="fas fa-eye"></i></button>
                                    <button class="btn ac-primary" style="color: white;" type="submit">Papar</button>
                                </div>
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <button class="btn ac-warning" disabled="disabled"><i class="fa-solid fa-xmark"></i></button>
                                    <a class="btn ac-warning" asp-action="Index"> Batal Papar </a>
                                </div>
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <button class="btn ac-info" disabled="disabled"><i class="fas fa-print"></i></button>
                                    <button class="btn ac-info" data-toggle="modal" data-target="#modalCetak" style="color: white;" type="button" data-placement="top" title="Cetak">Cetak</button>
                                </div>

                            </div>
                            <div class="text-center show-mobile">
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <button class="btn text-primary" type="submit" data-toggle="tooltip" data-placement="top" title="Papar"><i class="fa fa-eye fa-2x"></i></button>
                                    <a class="btn text-warning" asp-action="Index"><i class="fa-solid fa-xmark fa-2x"></i></a>
                                    <button class="btn text-info" data-toggle="modal" data-target="#modalCetak" data-placement="top" type="button" title="Cetak"><i class="fas fa-print fa-2x"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover compact" width="100%" id="IndexTable">
                    <caption>Rekod dipamerkan : @Model.Count()</caption>
                    <thead class="table-secondary">
                        <tr>
                            <th>Bil</th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LgDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LgModule)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LgOperation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LgNote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoRujukan)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Jumlah)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SysCode)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LgDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LgModule)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LgOperation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LgNote)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoRujukan)
                                </td>
                                <td>
                                    @Convert.ToDecimal(item.Jumlah).ToString("#,##0.00")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SysCode)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }


    </div>
</div>
<!-- Modal Cetak -->
<div class="modal fade bd-example-modal-lg" id="modalCetak" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-success">
                <h5 class="modal-title">Cetak Belanjawan Semasa</h5>
                <button type="button" class="border-0 bg-transparent" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fas fa-times fa-2x bg-opacity-100"></i></span>
                </button>
            </div>
            <form asp-action="PrintPDF" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-body">

                    <div class="row g-3">
                        <div class="col-sm-2">
                            <label class="form-control-label">Pengguna</label>
                        </div>
                        <div class="col-sm-10">
                            <div class="mb-2 input-group-sm ">
                                <select class="form-control form-control-sm select2" name="searchUsernamePrint" asp-items="@ViewBag.username" id="ddlUsernamePrint"></select>
                                <label class="invalid-feedback">Sila isi ruangan ini.</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="input-group mb-2 input-group-sm ">
                                <label class="form-control-label">Modul</label>
                            </div>
                        </div>
                        <div class="col-md-5">

                            <div class="input-group mb-2 input-group-sm ">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Dari</span>
                                </div>
                                <input class="form-control form-control-sm" type="text" name="searchModulFrom" value="@ViewData["ModulFrom"]" id="modul1" />
                                <label class="invalid-feedback">Sila isi ruangan ini.</label>
                            </div>
                        </div>
                        <div class="col-md-5">

                            <div class="input-group mb-2 input-group-sm ">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Hingga</span>
                                </div>
                                <input class="form-control form-control-sm" type="text" name="searchModulTo" value="@ViewData["ModulTo"]" id="modul2" />
                                <label class="invalid-feedback">Sila isi ruangan ini.</label>
                            </div>
                        </div>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-2">
                            <div class="input-group mb-2 input-group-sm ">
                                <label class="form-control-label">Tarikh</label>
                            </div>
                        </div>
                        <div class="col-md-5">

                            <div class="input-group mb-2 input-group-sm ">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Dari</span>
                                </div>
                                <input class="form-control form-control-sm" type="datetime-local" name="searchDateFrom" value="@ViewData["DateFrom"]" id="tarikh1" />
                                <label class="invalid-feedback">Sila isi ruangan ini.</label>
                            </div>
                        </div>
                        <div class="col-md-5">

                            <div class="input-group mb-2 input-group-sm ">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Hingga</span>
                                </div>
                                <input class="form-control form-control-sm" type="datetime-local" name="searchDateTo" value="@ViewData["DateTo"]" id="tarikh2" />
                                <label class="invalid-feedback">Sila isi ruangan ini.</label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn ac-danger btn-sm" data-bs-dismiss="modal">Tutup</button>
                    <button type="submit" class="btn ac-success btn-sm" formtarget="_blank">Cetak</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal Cetak End -->