@model DDaftarAwam

@{
    ViewData["Title"] = "Daftar Awam - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_JSCreate" />

<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Views/Partials/Common/_TitleCreatePartial.cshtml" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="syscode" value="SPPB" hidden />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="KodSyarikat" class="control-label"></label>
                        <input asp-for="KodSyarikat" class="form-control form-control-sm" required readonly />
                        <span asp-validation-for="KodSyarikat" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NoPendaftaran" class="control-label"></label>
                        <input asp-for="NoPendaftaran" class="form-control form-control-sm text-uppercase" />
                        <span asp-validation-for="NoPendaftaran" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EnKategoriDaftarAwam" class="control-label"></label>
                        <select asp-for="EnKategoriDaftarAwam" class="form-control form-control-sm text-uppercase" required>
                            <option value="0">- SILA PILIH -</option>
                            @foreach (var item in ViewBag.EnKategoriDaftarAwam)
                            {
                                <option value="@item.id">@item.indek - @item.perihal</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NamaSyarikat" class="control-label"></label>
                <input asp-for="NamaSyarikat" class="form-control form-control-sm text-uppercase" />
                <span asp-validation-for="NamaSyarikat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alamat1" class="control-label"></label>
                <input asp-for="Alamat1" class="form-control form-control-sm mb-2 text-uppercase" />
                <input asp-for="Alamat2" class="form-control form-control-sm mb-2 text-uppercase" />
                <input asp-for="Alamat3" class="form-control form-control-sm text-uppercase" />
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Poskod" class="control-label"></label>
                        <input asp-for="Poskod" class="form-control form-control-sm text-uppercase" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Bandar" class="control-label"></label>
                        <input asp-for="Bandar" class="form-control form-control-sm text-uppercase" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="JNegeriId" class="control-label"></label>
                        <select asp-for="JNegeriId" class="form-control form-control-sm text-uppercase" required>
                            <option value="0">- SILA PILIH -</option>
                            @foreach (var item in ViewBag.JNegeri)
                            {
                                <option value="@item.Id">@item.Kod - @item.Perihal</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="JBankId" class="control-label"></label>
                        <select asp-for="JBankId" class="form-control form-control-sm text-uppercase" required>
                            <option value="0">- SILA PILIH -</option>
                            @foreach (var item in ViewBag.JBank)
                            {
                                <option value="@item.Id">@item.Kod - @item.Perihal</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="NoAkaunBank" class="control-label"></label>
                        <input asp-for="NoAkaunBank" class="form-control form-control-sm text-uppercase" />
                        <span asp-validation-for="NoAkaunBank" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Telefon1" class="control-label"></label>
                        <input asp-for="Telefon1" class="form-control form-control-sm text-uppercase" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Emel" class="control-label"></label>
                        <input asp-for="Emel" class="form-control form-control-sm text-uppercase" />
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
