@model DDaftarAwam

@{
    ViewData["Title"] = "Daftar Awam - Papar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card box-shadow">
    <div class="card-body">
        <div class="row">
            <div class="col-8">
                <h5 class="text-uppercase text-dark mb-0">@ViewData["Title"]</h5>
                <span class="ac-ref"><a asp-action="Index" class="text-secondary">Indeks</a> / Papar</span>
            </div>
            <div class="col-4">
                <a asp-action="Index"
                   asp-route-searchString="@_http.HttpContext?.Session.GetString("searchString")"
                   class="text-secondary float-end"><i class="fas fa-times fa-2x"></i></a>
            </div>

        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Kod" class="control-label"></label>
                    <input asp-for="Kod" class="form-control form-control-sm" required readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NoPendaftaran" class="control-label"></label>
                    <input asp-for="NoPendaftaran" class="form-control form-control-sm text-uppercase" readonly/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="EnKategoriDaftarAwam" class="control-label"></label>
                    <input asp-for="EnKategoriDaftarAwam" class="form-control form-control-sm text-uppercase" value="@Model.EnKategoriDaftarAwam.GetDisplayName()" readonly />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nama" class="control-label"></label>
            <input asp-for="Nama" class="form-control form-control-sm text-uppercase" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Alamat1" class="control-label"></label>
            <input asp-for="Alamat1" class="form-control form-control-sm mb-2 text-uppercase" readonly />
            <input asp-for="Alamat2" class="form-control form-control-sm mb-2 text-uppercase" readonly />
            <input asp-for="Alamat3" class="form-control form-control-sm text-uppercase" readonly />
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Poskod" class="control-label"></label>
                    <input asp-for="Poskod" class="form-control form-control-sm" readonly/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Bandar" class="control-label"></label>
                    <input asp-for="Bandar" class="form-control form-control-sm text-uppercase" readonly/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="JNegeriId" class="control-label"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.JNegeri?.Kod - @Model.JNegeri?.Perihal" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="JBankId" class="control-label"></label>
                    <input class="form-control form-control-sm text-uppercase" value="@Model.JBank?.Kod - @Model.JBank?.Perihal" readonly />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NoAkaunBank" class="control-label"></label>
                    <input asp-for="NoAkaunBank" class="form-control form-control-sm" readonly/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="KodM2E" class="control-label"></label>
                    <input asp-for="KodM2E" class="form-control form-control-sm text-uppercase" />
                    <span asp-validation-for="KodM2E" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Telefon1" class="control-label"></label>
                    <input asp-for="Telefon1" class="form-control form-control-sm" readonly/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Emel" class="control-label"></label>
                    <input asp-for="Emel" class="form-control form-control-sm text-uppercase" readonly/>
                </div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn ac-primary btn-sm">Ubah</a>
            <a asp-action="Index"
               asp-route-searchString="@_http.HttpContext?.Session.GetString("searchString")"
               class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
        </div>

    </div>
</div>
