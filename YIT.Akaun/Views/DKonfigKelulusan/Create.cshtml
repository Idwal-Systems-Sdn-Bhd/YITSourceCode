@model DKonfigKelulusan

@{
    ViewData["Title"] = "Konfigurasi Kelulusan - Tambah";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card box-shadow">
    <div class="card-body">
        <partial name="~/Views/Partials/Common/_TitleCreatePartial.cshtml" />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="syscode" value="SPPB" hidden />
            <div class="form-group">
                <label asp-for="DPekerjaId" class="control-label"></label>
                <select asp-for="DPekerjaId" class="form-control form-control-sm text-uppercase" required>
                    <option value="0">- SILA PILIH -</option>
                    @foreach (var item in ViewBag.DPekerja)
                    {
                        <option value="@item.Id">@item.NoGaji - @item.Nama</option>
                    }
                </select>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EnKategoriKelulusan" class="control-label"></label>
                        <select asp-for="EnKategoriKelulusan" class="form-control form-control-sm text-uppercase" required>
                            <option value="0">- SILA PILIH -</option>
                            @foreach (var item in ViewBag.EnKategoriKelulusan)
                            {
                                <option value="@item.id">@item.indek - @item.perihal</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EnJenisModul" class="control-label"></label>
                        <select asp-for="EnJenisModul" class="form-control form-control-sm text-uppercase" required>
                            <option value="0">- SILA PILIH -</option>
                            @foreach (var item in ViewBag.EnJenisModul)
                            {
                                <option value="@item.id">@item.indek - @item.perihal</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
                    <div class="form-group">
                        <label asp-for="JBahagianId" class="control-label"></label>
                        <select asp-for="JBahagianId" class="form-control form-control-sm text-uppercase">
                            <option value="">- SILA PILIH -</option>
                            @foreach (var item in ViewBag.JBahagian)
                            {
                                <option value="@item.Id">@item.Kod - @item.Perihal</option>
                            }
                        </select>
                    </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="KataLaluan" class="control-label"></label>
                        <input asp-for="KataLaluan" class="form-control form-control-sm text-uppercase" type="password"/>
                        <span asp-validation-for="KataLaluan" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">                    
                        <div class="form-group">
                            <label asp-for="Tandatangan" class="control-label"></label>
                            <input asp-for="Tandatangan" class="form-control form-control-sm text-uppercase" value="0" />
                            <span asp-validation-for="Tandatangan" class="text-danger"></span>
                        </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MinAmaun" class="control-label"></label>
                        <input asp-for="MinAmaun" class="form-control form-control-sm" required value="0" />
                        <span asp-validation-for="MinAmaun" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaksAmaun" class="control-label text-white"></label>
                        <input asp-for="MaksAmaun" class="form-control form-control-sm text-uppercase" required value="0" />
                        <span asp-validation-for="MaksAmaun" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <hr />
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn ac-primary btn-sm" />
                <a asp-action="Index" class="btn ac-secondary btn-sm" style="width:auto">Batal</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
