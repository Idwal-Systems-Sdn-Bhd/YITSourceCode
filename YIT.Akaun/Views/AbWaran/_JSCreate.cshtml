                    for (var i = 0; i < r.objek.length; i++) {
                        var item1 = r.objek[i];
                        var str = "<tr><td hidden>" + item1.jBahagianId +
                            "</td><td class='text-uppercase'>" + item1.jBahagian.Kod + " - " + item1.jBahagian.perihal +
