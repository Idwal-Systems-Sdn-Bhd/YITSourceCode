﻿<script type="text/javascript">
     var columnSearchVar;
     $(document).ready(function () {

         var table = $('.table').DataTable({
             "paging": false,
             rowReorder: true,
             columnDefs: [
                 { orderable: true, className: 'reorder', targets: 1 },
                 { orderable: true, className: 'reorder', targets: 2 },
                 { orderable: true, className: 'reorder', targets: 3 },
                 { orderable: true, className: 'reorder', targets: 4 },
                 { orderable: true, className: 'reorder', targets: 5 },
                 { orderable: true, className: 'reorder', targets: 6 },
                 { orderable: true, className: 'reorder', targets: 7 },
                 { orderable: false, targets: '_all' }
             ],
             "order": [[1, "asc"]],
             "scrollY": "50vh",
             "scrollX": true,
             "scrollCollapse": true,
             "paging": true,
             dom: 'rtip',
             "language": {
                 "info": "_TOTAL_ entri yang dipamerkan",
                 "infoEmpty": "Tiada data untuk dipamerkan",
                 "infoFiltered": " - ditapis daripada _MAX_ jumlah keseluruhan rekod"
             },
             "pagingType": "numbers",
             "pageLength": 100
         });


         $('#columnSearch').change(function () {
             columnSearchVar = $(this).val();
             // refresh table
             $('#myInput').val('');
             table.destroy();

             table = $('.table').DataTable({
                 "paging": false,
                 rowReorder: true,
                 columnDefs: [
                     { orderable: true, className: 'reorder', targets: 1 },
                     { orderable: true, className: 'reorder', targets: 2 },
                     { orderable: false, targets: '_all' }
                 ],
                 "order": [[1, "asc"]],
                 dom: 'rtp'
             });
             // refresh table end
         });

         table.on('order.dt search.dt', function () {
             table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                 cell.innerHTML = i + 1;
             });
         }).draw();

         $('#myInput').on('keyup', function () {
             if (!columnSearchVar) {
                 table
                     .search(this.value)
                     .draw();
             }
             else {
                 table
                     .columns(columnSearchVar)
                     .search(this.value)
                     .draw();
             }
         });
     });
</script>