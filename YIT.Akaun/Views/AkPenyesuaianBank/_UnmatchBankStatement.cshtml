
<div class="row mb-3">
    <div class="col-md-12">

        <div class="row">
            <div class="col-lg-12">
                @*table Senarai Bank*@
                <div class="card box-shadow mb-3 mt-2">
                    <div class="card-header">
                        <h6>Senarai Penyata Bank</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3 mb-2">
                                <select class="form-control form-control-sm"
                                        name="searchColumnUnmatch" id="searchColumnUnmatch">
                                    <option value="tarikh">Tarikh</option>
                                    <option value="padan">No Padanan</option>
                                </select>
                            </div>
                            <div class="col-sm-9 mb-2">
                                <div class="row">
                                    <div class="col-10">
                                        <div class="row">
                                            <div class="col-6" id="myInputDateUnmatch1">
                                                <input class="form-control form-control-sm mb-2" type="date" name="searchDateUnmatch1" id="inputTarikhUnmatch1" value="@ViewBag.SearchData1" />
                                            </div>
                                            <div class="col-6" id="myInputDateUnmatch2">
                                                <input class="form-control form-control-sm" type="date" name="searchDateUnmatch2" id="inputTarikhUnmatch2" value="@ViewBag.SearchData2" />
                                            </div>
                                            <div class="col-12" id="myInputNoPadananUnmatch2">
                                                <input class="form-control form-control-sm" type="number" name="searchNoPadananUnmatch2" id="inputNoPadananUnmatch2" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <a class="btn text-info btn-sm" id="searchButtonBankUnmatch" href="javascript:;" data-toggle="tooltip" data-placement="top" title="Cari Unmatch"><i class="fas fa-search"></i></a>
                                        <p id="loadingBankUnmatch" hidden><img src="~/img/Spinner.gif" style="height:30px;"></p>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <input id="id-bank-matched-statement" hidden />
                        <input id="indek-bank-matched-statement" hidden />
                        @*<input id="amaun-bank-matched-statement" hidden />*@
                        <div class="table-responsive table-sm pb-2">
                            <table id="tblUnmatchSenaraiBank" class="table display compact nowrap table-hover" cellpadding="0" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th style="width:5%">No Padanan</th>
                                        <th style="width:5%">Tarikh</th>
                                        <th style="width:5%">Kod Trans.</th>
                                        <th style="width:50%">Perihal</th>
                                        <th style="width:20%">Dokumen Asal</th>
                                        <th style="width:10%">Debit RM</th>
                                        <th style="width:10%">Kredit RM</th>
                                        <th style="width:5%" hidden>Indek</th>
                                        <th style="width:10%"></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyUnmatchSenaraiBank">
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group row text-end">
                            <label for="amaun-bank-matched-statement" class="col-sm-8 col-form-label">Jumlah RM</label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm input-group-sm" name="amaun-bank-matched-statement" id="amaun-bank-matched-statement" value="0.00" type="number" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                @*table Senarai Bank end*@
            </div>
            <div class="col-lg-12">
                @*table Senarai Sistem*@
                <div class="card box-shadow mb-3 mt-2">
                    <div class="card-header">
                        <h6>Senarai Penyata Sistem</h6>
                    </div>
                    <div class="card-body">
                        <input id="indek-system-matched-statement" hidden />
                        <p id="loadingSistemUnmatch" hidden><img src="~/img/Spinner.gif" style="height:30px;"></p>
                        @*<input id="amaun-system-matched-statement" hidden value="0.00" type="number" />*@
                        <div class="table-responsive table-sm pb-2">
                            <table id="tblUnmatchSenaraiSistem" class="table display compact nowrap table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th hidden>Id</th>
                                        <th>Tarikh</th>
                                        <th>No Rujukan</th>
                                        <th>Perihal</th>
                                        <th>No Slip</th>
                                        <th>Debit RM</th>
                                        <th>Kredit RM</th>
                                        <th hidden>Indek</th>
                                        <th hidden>IsGanda</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyUnmatchSenaraiSistem">
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group row text-end">
                            <label for="amaun-system-matched-statement" class="col-sm-8 col-form-label">Jumlah RM</label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm input-group-sm" name="amaun-system-matched-statement" id="amaun-system-matched-statement" value="0.00" type="number" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                @*table Senarai Sistem end*@
            </div>
        </div>
        <div>
            <div class="text-end">
                <a class="btn ac-warning btn-sm" id="unmatchButton" href="javascript:;">Batal Padan</a>
            </div>
        </div>
    </div>
</div>