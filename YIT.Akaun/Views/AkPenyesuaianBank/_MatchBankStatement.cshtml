
<div class="row mb-3">
    <div class="col-md-12">

        <div class="row">
            <div class="col-lg-12">
                @*table Senarai Sistem*@
                <div class="card box-shadow mb-3 mt-2">
                    <div class="card-header">
                        <h6>Akaun Buku Tunai</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3 mb-2">
                                <select class="form-control form-control-sm"
                                        name="searchColumn2" id="searchColumn2">
                                    <option value="tarikh">Tarikh</option>
                                </select>
                            </div>
                            <div class="col-sm-9 mb-2">
                                <div class="row">
                                    <div class="col-10">
                                        <div class="row">
                                            <div class="col-6" id="myInputDate3">
                                                <input class="form-control form-control-sm mb-2" type="date" name="searchDate3" id="inputTarikh3" value="@ViewBag.SearchData1" />
                                            </div>
                                            <div class="col-6" id="myInputDate4">
                                                <input class="form-control form-control-sm" type="date" name="searchDate4" id="inputTarikh4" value="@ViewBag.SearchData2" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <a class="btn text-info btn-sm" id="searchButtonSistem" href="javascript:;" data-toggle="tooltip" data-placement="top" title="Cari">
                                            <i class="fas fa-search"></i>
                                        </a>
                                        <p id="loadingSistem" hidden><img src="~/img/Spinner.gif" style="height:30px;"></p>
                                        @*<label asp-for="NamaFail" class="control-label"></label>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input id="indek-system-statement" hidden />
                        <div class="table-responsive table-sm pb-2">
                            <table id="tblSenaraiSistem" class="table display compact nowrap table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th hidden>Id</th>
                                        <th>Tarikh</th>
                                        <th>No Rujukan</th>
                                        <th>Perihal</th>
                                        <th>No Slip</th>
                                        <th>Debit RM</th>
                                        <th>Kredit RM</th>
                                        <th hidden>Indek</th>
                                        <th hidden>IsGanda</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodySenaraiSistem">
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group row text-end">
                            <label for="amaun-system-statement" class="col-sm-8 col-form-label">Jumlah RM</label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm input-group-sm" name="amaun-system-statement" id="amaun-system-statement" value="0.00" type="number" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                @*table Senarai Sistem end*@
            </div>
            <div class="col-lg-12">
                @*table Senarai Bank*@
                <div class="card box-shadow mb-3 mt-2">
                    <div class="card-header">
                        <h6>Senarai Penyata Bank</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3 mb-2">
                                <select class="form-control form-control-sm"
                                        name="searchColumn" id="searchColumn">
                                    <option value="tarikh">Tarikh</option>
                                </select>
                            </div>
                            <div class="col-sm-9 mb-2">
                                <div class="row">
                                    <div class="col-10">
                                        <div class="row">
                                            <div class="col-6" id="myInputDate1">
                                                <input class="form-control form-control-sm mb-2" type="date" name="searchDate1" id="inputTarikh1" value="@ViewBag.SearchData1" />
                                            </div>
                                            <div class="col-6" id="myInputDate2">
                                                <input class="form-control form-control-sm" type="date" name="searchDate2" id="inputTarikh2" value="@ViewBag.SearchData2" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <a class="btn text-info btn-sm" id="searchButtonBank" href="javascript:;" data-toggle="tooltip" data-placement="top" title="Cari"><i class="fas fa-search"></i></a>
                                        <p id="loadingBank" hidden><img src="~/img/Spinner.gif" style="height:30px;"></p>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <input id="id-bank-statement" hidden />
                        <input id="indek-bank-statement" hidden />
                        <input id="noslip-bank-statement" hidden/>
                        @*<input id="amaun-bank-statement" value="0.00" type="number"/>*@
                        <div class="table-responsive table-sm pb-2">
                            <table id="tblSenaraiBank" class="table display compact nowrap table-hover" cellpadding="0" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th style="width:5%" hidden>Id</th>
                                        <th style="width:5%">Tarikh</th>
                                        <th style="width:5%">Kod Trans.</th>
                                        <th style="width:50%">Perihal</th>
                                        <th style="width:20%">Dokumen Asal</th>
                                        <th style="width:10%">Debit RM</th>
                                        <th style="width:10%">Kredit RM</th>
                                        <th style="width:5%" hidden>Indek</th>
                                        <th style="width:10%"></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodySenaraiBank">
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group row text-end">
                            <label for="amaun-bank-statement" class="col-sm-8 col-form-label">Jumlah RM</label>
                            <div class="col-sm-4">
                                <input class="form-control form-control-sm input-group-sm" name="amaun-bank-statement" id="amaun-bank-statement" value="0.00" type="number" readonly />
                            </div>
                        </div>
                    </div>
                </div>
                @*table Senarai Bank end*@
            </div>

        </div>
        <div>
            <div class="text-end">
                <a class="btn ac-primary btn-sm" id="matchButton" href="javascript:;">Padan</a>
            </div>
        </div>
    </div>
</div>